<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_close"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:drawableStart="@drawable/button_exit"

        app:layout_constraintBottom_toBottomOf="@+id/text_dialog"
        app:layout_constraintEnd_toEndOf="@+id/text_dialog"
        app:layout_constraintTop_toTopOf="@+id/text_dialog"/>

    <TextView
        android:id="@+id/text_dialog"
        style="@style/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/text_info"
        android:textAlignment="center"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background_white"
        android:orientation="vertical"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_face"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>